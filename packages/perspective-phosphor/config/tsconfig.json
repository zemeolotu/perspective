{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "module": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "es2016",
        "outDir": "dist/esm",
        "sourceMap": true,
        "inlineSourceMap": false,
        "inlineSources": true,
        "rootDir": "../src/ts",
        "lib": [
            "es2016",
            "es2015.promise",
            "dom"
        ],
        "types": [
            "@finos/perspective-viewer",
        ]
    },
    "include": [
        "../src/ts/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}